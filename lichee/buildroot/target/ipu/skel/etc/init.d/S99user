>>>>>>> origin/web

exit 1

APP_PATH=/data
APP_NAME=oasis-ipu

case "$1" in
    start)
        # Start oasis daemon
        LD_LIBRARY_PATH=$APP_PATH $APP_PATH/$APP_NAME &
        echo "done"
        ;;
    stop)
        # Stop oasis daemon
        killall $APP_NAME
        ;;
    *)
        echo "Usage: $0 {start|stop}"
        exit 1
        ;;
esac
